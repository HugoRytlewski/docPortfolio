ALTER PROCEDURE [dbo].[PS_TestNav]
@user nvarchar(max),
@currentPage nvarchar(100) = NULL
AS
BEGIN
    -- Déclaration des variables
    DECLARE @id INT, @nomMenu NVARCHAR(50)
    DECLARE @sousMenu NVARCHAR(50)
    DECLARE @href NVARCHAR(50)
    DECLARE @menuLi NVARCHAR(MAX) = ''
    DECLARE @htmlHeader NVARCHAR(MAX)
    DECLARE @htmlFooter NVARCHAR(MAX)
    DECLARE @htmlStyle NVARCHAR(MAX)
    DECLARE @htmlScript NVARCHAR(MAX)
    DECLARE @roleUser INT
    DECLARE @sousSousMenu NVARCHAR(50)
    DECLARE @hrefSousSousmenu NVARCHAR(50)
    DECLARE @idSousMenu int
    DECLARE @hrefMenu nvarchar(max)
    DECLARE @IsUnique bit
    DECLARE @IdTableMenuPrincipal int
    DECLARE @IdTableSousMenu int
    DECLARE @IdTableSousSousMenu int

    -- Récupération du rôle utilisateur
    SET @roleUser = (SELECT TB_Utilisateurs.role FROM TB_Utilisateurs
                    WHERE TB_Utilisateurs.UserName = @user)

    -- Table temporaire pour les menus principaux
    DECLARE @TableMenuPrincipal TABLE (IdTableMenuPrincipal int identity not null, 
                                      id_menu_Principal int,
                                      nomMenu varchar(256), 
                                      hrefMenu varchar(256), 
                                      ok int default 0)
    
    INSERT INTO @TableMenuPrincipal (id_menu_Principal, nomMenu, hrefMenu)
    SELECT t1.id, menuNom, t1.href
    FROM TB_Menu as t1
    INNER JOIN tb_role_menu as j ON t1.id = j.id_menu
    WHERE isActive = 1 AND @roleUser = j.id_role
    ORDER BY ordre

    -- Construction des menus
    WHILE EXISTS (SELECT * FROM @TableMenuPrincipal WHERE ok = 0)
    BEGIN
        SET @IdTableMenuPrincipal = (SELECT MIN(IdTableMenuPrincipal)
                                    FROM @TableMenuPrincipal
                                    WHERE ok = 0)

        SELECT @id = id_menu_Principal,
               @nomMenu = ISNULL(nomMenu, ''),
               @hrefMenu = ISNULL(hrefMenu, '')
        FROM @TableMenuPrincipal
        WHERE IdTableMenuPrincipal = @IdTableMenuPrincipal

        -- Menu principal
        IF @hrefMenu IS NULL OR @hrefMenu = ''
        BEGIN
            SET @menuLi = @menuLi + '
            <li role="none"' + 
            CASE WHEN @currentPage = @hrefMenu THEN ' class="menu-item-active"' ELSE '' END + '>
                <button type="button" 
                        aria-expanded="false" 
                        aria-controls="' + @nomMenu + 'Menu" 
                        id="BTN_' + @nomMenu + '" 
                        class="OneSectionRGAA" 
                        tabindex="0">
                    ' + @nomMenu + '
                </button>'
        END
        ELSE
        BEGIN
            SET @menuLi = @menuLi + '
            <li role="none"' + 
            CASE WHEN @currentPage = @hrefMenu THEN ' class="menu-item-active"' ELSE '' END + '>
                <a role="menuitem" 
                   href="' + @hrefMenu + '" 
                   id="BTN_' + @nomMenu + '" 
                   class="OneSectionRGAA' + 
                   CASE WHEN @currentPage = @hrefMenu THEN ' menu-link-active' ELSE '' END + '" 
                   tabindex="0">
                    ' + @nomMenu + '
                </a>'
        END

        -- Sous-menus
        DECLARE @TableSousMenu TABLE (IdTableSousMenu int identity not null, 
                                     id int, 
                                     Nom varchar(256), 
                                     href varchar(256), 
                                     ok int default 0)
        
        INSERT INTO @TableSousMenu (id, Nom, href)
        SELECT id, Nom, href
        FROM TB_SOUS_MENU
        INNER JOIN TB_Role_SousMenu as j ON TB_SOUS_MENU.id = j.ID_Sous_Menu
        WHERE isActive = 1 AND @roleUser = j.id_role AND TB_SOUS_MENU.idMenu = @id

        IF EXISTS (SELECT 1 FROM @TableSousMenu)
        BEGIN
            SET @menuLi = @menuLi + '
                <ul role="menu" 
                    id="' + @nomMenu + 'Menu" 
                    class="dropdownRGAA" 
                    aria-labelledby="BTN_' + @nomMenu + '">'

            WHILE EXISTS (SELECT * FROM @TableSousMenu WHERE ok = 0)
            BEGIN
                SET @IdTableSousMenu = (SELECT MIN(IdTableSousMenu)
                                       FROM @TableSousMenu
                                       WHERE ok = 0)

                SELECT @idSousMenu = id,
                       @sousMenu = ISNULL(Nom, ''),
                       @href = ISNULL(href, '')
                FROM @TableSousMenu
                WHERE IdTableSousMenu = @IdTableSousMenu

                -- Élément de sous-menu
                SET @menuLi = @menuLi + '
                    <li role="none"' + 
                    CASE WHEN @currentPage = @href THEN ' class="menu-item-active"' ELSE '' END + '>
                        <a role="menuitem" 
                           tabindex="-1" 
                           ' + CASE WHEN @href != '' THEN 'href="' + @href + '"' ELSE '' END + 
                           CASE WHEN @currentPage = @href THEN ' class="menu-link-active"' ELSE '' END + '>
                            ' + @sousMenu + '
                        </a>'

                -- Sous-sous-menus
                DECLARE @TableSousSousMenu TABLE (IdTableSousSousMenu int identity not null, 
                                                 id int, 
                                                 Nom varchar(256), 
                                                 href varchar(256), 
                                                 ok int default 0)
                
                INSERT INTO @TableSousSousMenu (id, Nom, href)
                SELECT DISTINCT id, Nom, href
                FROM TB_SOUS_SOUS_MENU
                WHERE id_SousMenu = @idSousMenu AND isActive = 1
                ORDER BY id

                IF EXISTS (SELECT 1 FROM @TableSousSousMenu)
                BEGIN
                    SET @menuLi = @menuLi + '
                        <ul role="menu" class="SousSousMenuRGAA">'

                    WHILE EXISTS (SELECT * FROM @TableSousSousMenu WHERE ok = 0)
                    BEGIN
                        SET @IdTableSousSousMenu = (SELECT MIN(IdTableSousSousMenu)
                                                   FROM @TableSousSousMenu
                                                   WHERE ok = 0)

                        SELECT @sousSousMenu = ISNULL(Nom, ''),
                               @hrefSousSousmenu = ISNULL(href, '')
                        FROM @TableSousSousMenu
                        WHERE IdTableSousSousMenu = @IdTableSousSousMenu

                        SET @menuLi = @menuLi + '
                            <li role="none"' + 
                            CASE WHEN @currentPage = @hrefSousSousmenu THEN ' class="menu-item-active"' ELSE '' END + '>
                                <a role="menuitem" 
                                   tabindex="-1" 
                                   href="' + @hrefSousSousmenu + '" 
                                   class="sousMenuRGAA' + 
                                   CASE WHEN @currentPage = @hrefSousSousmenu THEN ' menu-link-active' ELSE '' END + '">
                                    ' + @sousSousMenu + '
                                </a>
                            </li>'

                        UPDATE @TableSousSousMenu SET ok = 1 
                        WHERE IdTableSousSousMenu = @IdTableSousSousMenu
                    END

                    SET @menuLi = @menuLi + '
                        </ul>'
                END

                SET @menuLi = @menuLi + '
                    </li>'

                UPDATE @TableSousMenu SET ok = 1 
                WHERE IdTableSousMenu = @IdTableSousMenu
            END

            SET @menuLi = @menuLi + '
                </ul>'
        END

        SET @menuLi = @menuLi + '
            </li>'

        UPDATE @TableMenuPrincipal SET ok = 1 
        WHERE IdTableMenuPrincipal = @IdTableMenuPrincipal
    END

    -- Construction du HTML final
    SET @htmlHeader = '
<nav class="skip-links" aria-label="Accès rapide">
    <a href="#main">Contenu principal</a>
</nav>
<header class="headerRGAA" role="banner">
    <div class="header-container">
        <a href="accueilUser.aspx" class="logoBoxRGAA">
            <img class="logoRGAA" src="../img/logo.png" alt="Logo de la Banque Postale" />
            <p class="titleRGAA">Lettres Types</p>
        </a>
        <button class="MenuBurgerRGAA" 
                aria-expanded="false" 
                aria-controls="sectionNavRGAA" 
                aria-label="Menu principal">
            <span class="burger-line"></span>
            <span class="burger-line"></span>
            <span class="burger-line"></span>
        </button>
        <nav id="sectionNavRGAA" class="sectionNavRGAA" aria-label="Navigation principale">
            <ul role="menubar" class="main-menu">'

    SET @htmlFooter = '
            </ul>
        </nav>
    </div>
</header>'

    SET @htmlStyle = '
<style>
/* Reset et base */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:focus {
    outline: 2px solid #005fcc;
    outline-offset: 2px;
}

.skip-links {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.skip-links a {
    position: absolute;
    left: -10000px;
    top: 0;
    background: #fff;
    color: #000;
    padding: 8px;
    z-index: 100;
}

.skip-links a:focus {
    left: 0;
}

/* Header */
.headerRGAA {
    background-color: #003DA5;
    color: white;
    width: 100%;
    position: relative;
    z-index: 100;
}

.header-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
}

/* Logo */
.logoBoxRGAA {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
}

.logoRGAA {
    height: 40px;
    width: auto;
}

.titleRGAA {
    font-weight: bold;
    color: white;
    background: transparent;
    padding: 0;
}

/* Menu Burger */
.MenuBurgerRGAA {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    z-index: 101;
}

.burger-line {
    display: block;
    width: 24px;
    height: 2px;
    background: white;
    margin: 5px 0;
    transition: transform 0.3s ease;
}

/* Navigation principale */
.sectionNavRGAA {
    display: flex;
}

.main-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
}

.main-menu > li {
    position: relative;
}

/* Styles des liens */
.OneSectionRGAA {
    color: white;
    text-decoration: none;
    padding: 1rem;
    display: block;
    background: transparent;
    border: none;
    font-size: inherit;
    cursor: pointer;
}

/* Style pour l'élément de menu actif */
.menu-item-active {
    position: relative;
}

.menu-item-active > button,
.menu-item-active > a {
    font-weight: bold;
}

.menu-item-active::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 1rem;
    right: 1rem;
    height: 3px;
    background: white;
}

.menu-link-active {
    font-weight: bold;
    text-decoration: underline;
    text-underline-offset: 4px;
}

/* Menus déroulants */
.dropdownRGAA {
    position: absolute;
    top: 100%;
    left: 0;
    background: #003DA5;
    min-width: 200px;
    display: none;
    list-style: none;
    padding: 0;
    margin: 0;
    z-index: 100;
}

.SousSousMenuRGAA {
    position: absolute;
    left: 100%;
    top: 0;
    background: #003DA5;
    min-width: 200px;
    display: none;
}

/* États interactifs */
.main-menu > li:hover > .dropdownRGAA,
.main-menu > li:focus-within > .dropdownRGAA,
.dropdownRGAA li:hover > .SousSousMenuRGAA,
.dropdownRGAA li:focus-within > .SousSousMenuRGAA {
    display: block;
}

.OneSectionRGAA:hover,
.OneSectionRGAA:focus {
    background-color: #3263b7;
}

/* Version mobile */
@media (max-width: 768px) {
    .MenuBurgerRGAA {
        display: block;
    }
    
    .sectionNavRGAA {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: #003DA5;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        z-index: 100;
    }
    
    .sectionNavRGAA[aria-expanded="true"] {
        transform: translateX(0);
    }
    
    .main-menu {
        flex-direction: column;
        width: 100%;
    }
    
    .dropdownRGAA,
    .SousSousMenuRGAA {
        position: static;
        display: none;
        width: 100%;
    }
    
    .dropdownRGAA li {
        padding-left: 2rem;
    }
    
    .SousSousMenuRGAA li {
        padding-left: 4rem;
    }

    .menu-item-active::after {
        left: 0;
        right: 0;
    }
}

/* Animation burger */
.MenuBurgerRGAA[aria-expanded="true"] .burger-line:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
}

.MenuBurgerRGAA[aria-expanded="true"] .burger-line:nth-child(2) {
    opacity: 0;
}

.MenuBurgerRGAA[aria-expanded="true"] .burger-line:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
}
</style>'

    SET @htmlScript = '
<script>
document.addEventListener("DOMContentLoaded", function() {
    // Gestion du menu burger
    const burgerBtn = document.querySelector(".MenuBurgerRGAA");
    const mainNav = document.querySelector(".sectionNavRGAA");
    
    burgerBtn.addEventListener("click", function() {
        const isExpanded = this.getAttribute("aria-expanded") === "true";
        this.setAttribute("aria-expanded", !isExpanded);
        mainNav.setAttribute("aria-expanded", !isExpanded);
    });
    
    // Gestion des menus déroulants
    const menuButtons = document.querySelectorAll(".OneSectionRGAA[aria-controls]");
    
    menuButtons.forEach(button => {
        button.addEventListener("click", function() {
            if (window.innerWidth > 768) return;
            
            const menuId = this.getAttribute("aria-controls");
            const menu = document.getElementById(menuId);
            const isExpanded = this.getAttribute("aria-expanded") === "true";
            
            this.setAttribute("aria-expanded", !isExpanded);
            menu.style.display = isExpanded ? "none" : "block";
        });
    });
    
    // Fermeture au clic externe
    document.addEventListener("click", function(e) {
        if (!mainNav.contains(e.target) && e.target !== burgerBtn) {
            burgerBtn.setAttribute("aria-expanded", "false");
            mainNav.setAttribute("aria-expanded", "false");
        }
    });
    
    // Gestion du clavier
    document.addEventListener("keydown", function(e) {
        if (e.key === "Escape") {
            burgerBtn.setAttribute("aria-expanded", "false");
            mainNav.setAttribute("aria-expanded", "false");
        }
    });
});
</script>'

    -- Résultat final
    SELECT @htmlHeader + @menuLi + @htmlFooter + @htmlStyle + @htmlScript AS HtmlContent
END