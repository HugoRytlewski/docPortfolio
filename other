<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Menu Accessible</title>
  <style>
    nav {
      background: #333;
      color: white;
      padding: 1em;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .menu > li {
      display: inline-block;
      position: relative;
    }

    .menu > li > button {
      background: none;
      color: white;
      border: none;
      font-size: 1rem;
      padding: 0.5em 1em;
      cursor: pointer;
    }

    .submenu {
      display: none;
      position: absolute;
      background: #444;
      min-width: 160px;
      top: 100%;
      left: 0;
      z-index: 10;
    }

    .submenu[aria-hidden="false"] {
      display: block;
    }

    .submenu li a {
      display: block;
      color: white;
      text-decoration: none;
      padding: 0.5em 1em;
    }

    .submenu li a:focus,
    .submenu li a:hover {
      background: #666;
    }
  </style>
</head>
<body>
  <header>
    <nav role="navigation" aria-label="Menu principal">
      <ul class="menu">
        <li>
          <button aria-haspopup="true" aria-expanded="false" aria-controls="submenu-services" id="menu-services">
            Services
          </button>
          <ul class="submenu" id="submenu-services" role="menu" aria-labelledby="menu-services" aria-hidden="true">
            <li role="none"><a role="menuitem" href="#">Développement</a></li>
            <li role="none"><a role="menuitem" href="#">Design</a></li>
            <li role="none"><a role="menuitem" href="#">SEO</a></li>
          </ul>
        </li>
        <li><a href="#" role="link">À propos</a></li>
        <li><a href="#" role="link">Contact</a></li>
      </ul>
    </nav>
  </header>

  <script>
    const buttons = document.querySelectorAll('button[aria-haspopup="true"]');

    buttons.forEach(button => {
      const menuId = button.getAttribute('aria-controls');
      const submenu = document.getElementById(menuId);

      // Toggle on click or keyboard activation
      button.addEventListener('click', () => {
        const expanded = button.getAttribute('aria-expanded') === 'true';
        button.setAttribute('aria-expanded', String(!expanded));
        submenu.setAttribute('aria-hidden', String(expanded));
      });

      button.addEventListener('keydown', e => {
        if (e.key === 'Enter' || e.key === ' ' || e.key === 'ArrowDown') {
          e.preventDefault();
          button.click();
          const firstItem = submenu.querySelector('[role="menuitem"]');
          firstItem?.focus();
        }
      });
    });

    // Close submenus on Escape key
    document.addEventListener('keydown', e => {
      if (e.key === 'Escape') {
        buttons.forEach(button => {
          const submenu = document.getElementById(button.getAttribute('aria-controls'));
          button.setAttribute('aria-expanded', 'false');
          submenu.setAttribute('aria-hidden', 'true');
        });
      }
    });
  </script>
</body>
</html>